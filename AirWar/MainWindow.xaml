        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Arma -->
            <Rectangle Name="Arma" Width="50" Height="20" Fill="Black" />
            <!-- Bala -->
            <Ellipse Name="Bala" Width="10" Height="10" Fill="Red" Visibility="Hidden" />
        </Canvas>

    </Grid>
</Window>
